@page "/"
@inject IJSRuntime JSRuntime

<div class="landing-page">
    <div class="header">
        <img src="images/LandingPage_Image2.png" alt="Dating App Logo" class="logo" />
        <h1 style="margin-bottom: 10px;">Soul Sync: Connecting Hearts in the Lion City</h1>
        <p style="margin-bottom: 20px;">Find your perfect match with our amazing dating app.</p>
    </div>

    <div class="cta-buttons">
        <button class="btn btn-primary" @onclick="NavigateToSignUp">Sign Up Now</button>
        <button class="btn btn-secondary" @onclick="NavigateToLogin">Login</button>
    </div>

    <div class="footer">
        <p>&copy; 2023 SoulSync. All rights reserved.</p>
    </div>
</div>

@code {
    private async Task NavigateToSignUp()
    {
        await JSRuntime.InvokeVoidAsync("open", "/signup");
    }

    private async Task NavigateToLogin()
    {
        await JSRuntime.InvokeVoidAsync("open", "/login");
    }
}
